{% from "header/macro.njk" import govukHeader %}

{% macro navigationHeaderBlock(page) %}
    {{ govukHeader({
        serviceUrl: "/",
        homepageUrl: "https://www.gov.uk/",
        containerClasses: "govuk-width-container",
        serviceName: "Report your salmon or sea trout catch",
        navigation: [
            {
              href: "/licence" if page === "licence" else "/back",
              text: "Catch returns",
              active: not page or page === "licence"
            },
            {
              href: "/user-search",
              text: "User",
              active: page === "user-search"
            },
            {
              href: "/reports",
              text: "Reports",
              active: page === "reports"
            },
            {
              href: "/age-weight-key?clear=true",
              text: "Age weight key",
              active: page === "age-weight-key"
            },
            {
              href: "/logout",
              text: "Sign out"
            }
        ]
        })
    }}
{% endmacro %}